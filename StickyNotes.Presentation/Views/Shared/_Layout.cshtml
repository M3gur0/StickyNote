<!DOCTYPE html>
<html data-ng-app="stickyNotes">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Sticky notes</title>
    @Styles.Render("~/bundles/css")
    @Styles.Render("~/bundles/less")
    <link href="http://fonts.googleapis.com/css?family=Reenie+Beanie:regular" rel="stylesheet" type="text/css">

</head>
<body>

    <nav class="navbar">
        <div class="container">
            <div class="navbar-header">
                <a class="navbar-brand" href="/#/">
                    <div class="logo">
                        <img />
                    </div>
                    <p>
                        Sticky notes
                    </p>
                </a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="nav navbar-nav navbar-right">
                    <li class="active"><a href="/#/"><i class="glyphicon glyphicon-home"></i></a></li>
                    <li><a href="/#/note"><i class="glyphicon glyphicon-bookmark"></i></a></li>
                    <li><a href="/#/note/add"><i class="glyphicon glyphicon-plus-sign"></i></a></li>
                </ul>
            </div>
        </div>
    </nav>

    <main data-ng-view="">
        @RenderBody()
    </main>

    @Scripts.Render("~/bundles/lib")
    <script src="~/js/app.js"></script>
    <script src="~/js/services/noteService.js"></script>
    <script src="~/js/controllers/homeController.js"></script>
    <script src="~/js/controllers/noteController.js"></script>
</body>
</html>
